{
  "compilerOptions": {
    "sourceMap": false,
    "target": "ES2015",
    "removeComments": true,
    "preserveConstEnums": false,
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}